{% macro message_alert() %}
    {% with messages = get_flashed_messages() %}
        {% if messages %}
        <div class="sticky-top">
            {% for message in messages %}
                <div class="alert alert-warning alert-dismissible fade show" role="alert">
                    {{message}}
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                    </button>
                    </div>
            {% endfor %}
            </div>
        {% endif %}
    {% endwith %}
{% endmacro %}
{#
    field: field wtforms object
    renders the field including errors
#}
{% macro render_field(field) %}
<div class="form-group form-row mb-1">
    <div class="input-group">
        {% if field.errors %}
        {% set extra_class = "danger" %}
        {% else %}
        {% set extra_class = "primary" %}
        {% endif %}
        <div class="input-group-prepend">
            <span class='text-{{extra_class}} is-invalid input-group-text field-input non-select border-{{extra_class}}'
                  for='{{field.id}}'
                  id='{{field.label.id}}'>{{field.label.text}}</span>
        </div>
        {{field(class_ = 'form-control align-self-center border-'+ extra_class)}}
        {% if field.widget.input_type == 'password' %}
        <div class="input-group-append">
            <button class="btn btn-outline-secondary border-{{extra_class}} password-button">
                <i class="fa fa-eye"></i>
            </button>
        </div>
        {% endif %}
    </div>
</div>
{% endmacro %}
{# 
    render 1 form error of accounts
    err: text of an error
    style: the style type of the alert
#}
{% macro render_error(err, style) %}
<div class="form-row mb-1">
    <div class="col rounded alert-{{style}} text-justify ml-3 mr-3" style="text-anchor:middle;">{{ err }}</div>
</div>
{% endmacro %}
{#
    errors: list of error
    style: bootstrap stye for alert
    renders errors
#}
{% macro render_errors(errors, style='danger') %}{% if errors %}{% for err in errors %}{{ render_error(err, style) }}{% endfor %}{% endif %}{% endmacro %}
{#
    render_link:
    id: id of the link
    text: text of the link
    path: the path the link references
    macro for 1 link
#}
{% macro render_link(id, text, path) %}
<a class="primary-text mb-1 col-12 text-center" href="{{path}}" id={{id}}>{{text}}</a>
{% endmacro %}

